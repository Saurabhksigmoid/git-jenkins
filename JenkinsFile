pipeline {
    agent any
    environment {
        DOCKERCRED=credentials('dockerhub')
    }

    stages {
        stage('Build docker image') {
            steps {
                script{
                    sh 'docker build . -t jenkins-assignment:v1'
                    echo 'Image created'
                    sh 'echo $DOCKERCRED_PSW | docker login -u $DOCKERCRED_USR --password-stdin'
                    sh 'docker tag jenkins-assignment:v1 saurabhkambli/jenkins-assignment:v1'
                    sh 'docker push saurabhkambli/jenkins-assignment:v1'
                    echo 'Image pushed sucessfully'

                }    
            }
        }
        stage('Deploy') {
            steps {
                sh 'minikube start'
                sh 'kubectl get pods'
                sh 'kubectl apply -f pod-deployment.yaml' 
                sh 'kubectl get pods'
                
            }
        }
    }
    post {

        success {

            emailext body: 'Pipeline executed successfully', recipientProviders: [developers()], subject: 'Pipeline executed successfully', to: 'saurabh.kambli@sigmoidanalytics.com'

        }

        failure {

            emailext body: 'Pipeline failed', recipientProviders: [developers()], subject: 'Pipeline failed', to: 'saurabh.kambli@sigmoidanalytics.com'

        }

    }
}
